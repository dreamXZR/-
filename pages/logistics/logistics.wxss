.title-view{
  height: 130rpx;
}
.title{
  padding-top: 20rpx;
  margin-left: 20rpx;
  position: relative;
  text-align: center;
  font-family: PingFang-SC-Medium;
  font-size: 37.44rpx;
  color: #3c4350;
}
.message{
  height: 300rpx;
  background-color: #fff;
}
.name-view,.phone-view{
  position: relative;
