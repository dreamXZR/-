  left: 37rpx;
  color:#3D4451; 
}
.name-input{
  position: absolute;
  font-size: 30rpx;
  width: 400rpx;
  top:30rpx;
  left:210rpx;
  color:#A4A6AD; 
  border: 1px solid ;
}
.phone-input{
  position: absolute;
  font-size: 33rpx;
  width: 400rpx;
  top:30rpx;
  left:210rpx;
  color:#A4A6AD; 
  border: 1px solid ;
}
.phone{
  height: 70rpx;
}
.phone-name{
  position: relative;
  text-align: center;
  font-family: PingFang-SC-Medium;
  font-size: 37.44rpx;
  color: #3c4350;
  padding-top: 10rpx;
  margin-left: 20rpx;
}
.upload{
  height: 110rpx;
  background-color: #fff; 
}
